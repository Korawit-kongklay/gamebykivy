#:kivy 2.0.0

<Character>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self.texture

<Platform>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self.texture

<Attack>:
    canvas:
        PushMatrix
        Rotate:
            angle: self.attack_rotation
            origin: self.center
        Color:
            rgba: 1, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Game>:
    size: root.size
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/gifs/darkforest.gif'
    Label:
        text: f'Stage: {root.stage_number} Score: {root.score:.1f} Health: {root.health}'
        font_size: 20
        top: root.top - 10
        right: root.right - 10
    Button:
        text: 'Restart'
        size_hint: 0.2, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        opacity: 0 if root.game_active else 1
        disabled: root.game_active
        on_press: root.restart()