#:kivy 2.0.0

<Dino>:
    size: 50, 50
    canvas:
        Rectangle:
            source: 'dino.jpg'  # ไดโนเสาร์ Google
            pos: self.pos
            size: self.size

<Obstacle>:
    size: 30, 50
    canvas:
        Rectangle:
            source: 'gunman.jpg'  # เปลี่ยนเป็นคนครมีปืน (ถ้ามีภาพ)
            pos: self.pos
            size: self.size

<Bullet>:
    size: 20, 5
    canvas:
        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<DinoGame>:
    dino: dino
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'nakhon_background.jpg'  # พื้นหลังนครศรีธรรมราช
    Dino:
        id: dino
        x: 50
        y: 0
    Label:
        text: f'Stage: {root.stage} Score: {root.score}'  # แสดงด่านและคะแนน
        font_size: 20
        top: root.top - 10
        right: root.right - 10
    Label:
        text: f'Game Over! Score: {root.score}' if not root.game_active and root.stage <= 5 else 'Back to Google!' if root.stage > 5 else ''
        font_size: 40
        center: root.center
    Button:
        text: 'Restart'
        size_hint: 0.2, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        opacity: 0 if root.game_active else 1
        disabled: root.game_active
        on_press: root.restart()

<Boss>:
    size: 60, 80  # บอสใหญ่ขึ้น
    canvas:
        Rectangle:
            source: 'boss.jpg'  # ภาพบอส (เช่น หัวหน้านักรบ)
            pos: self.pos
            size: self.size